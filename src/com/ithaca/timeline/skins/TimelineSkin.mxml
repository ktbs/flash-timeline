<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
				 xmlns:s="library://ns.adobe.com/flex/spark"
				 xmlns:timeline="com.ithaca.timeline.*"
				 xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:Skins="com.ithaca.timeline.Skins.*" width="100%" height="100%">
	<fx:Declarations>
		<!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
	</fx:Declarations>
	 <fx:Metadata>[HostComponent("com.ithaca.timeline.Timeline")]</fx:Metadata>
	
	<s:states>
        <s:State name="normal" />
		<s:State name="disabled" />
    </s:states>
	
	<s:Rect x="0" y="0"
        radiusX="4" radiusY="4"
        height="100%" width="100%"
		minWidth="400" minHeight="30">
        <s:stroke>
            <s:LinearGradientStroke weight="1"/>
        </s:stroke>
        <s:fill>
            <s:LinearGradient>
                <s:entries>
                   <mx:GradientEntry color="0xf1a4e2" />
                </s:entries>
            </s:LinearGradient>
        </s:fill>     
    </s:Rect>
	 
	<s:Group left="10" right="4" top="6" bottom="2">
		<s:layout>
			<s:VerticalLayout/>
        </s:layout>
		
		<s:Label text="Timeline" fontSize="16" fontWeight="bold" />
	
		 <s:Scroller width="100%" height="300">			 
			<s:Group id="contentGroup" >
			<s:layout>
				<s:VerticalLayout/>
			</s:layout>
		</s:Group>
		</s:Scroller>
	</s:Group>
	
</s:Skin>
