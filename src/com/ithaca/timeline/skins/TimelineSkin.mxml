<?xml version="1.0" encoding="utf-8"?>
<s:Skin  xmlns:fx="http://ns.adobe.com/mxml/2009" 
				 xmlns:s="library://ns.adobe.com/flex/spark"
				 xmlns:tl="com.ithaca.timeline.*"
				 xmlns:tls="com.ithaca.timeline.skins.*"
				 xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:Skins="com.ithaca.timeline.Skins.*" 
				  creationComplete="creationCompleteHandler(event)"
				 width="100%" height="100%">
	<fx:Declarations>
		
		<!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
	</fx:Declarations>
	
	<fx:Metadata>[HostComponent("com.ithaca.timeline.Timeline")]</fx:Metadata>
	
	<fx:Script>
		<![CDATA[         			
			import com.ithaca.timeline.events.TimelineEvent;

			[Bindable]
			public var titleGroupWidth:Number =0;		
			protected function creationCompleteHandler(event:Event):void
			{
				titleGroupWidth = hostComponent.titleGroupWidth;	
				zoomContext.addEventListener( TimelineEvent.TIMERANGES_CHANGE, timeRuler.onTimeRangeChange);		
				zoomContext.addEventListener( Event.RESIZE, timeRuler.redraw);		
			}
			 ]]>
	</fx:Script>

	<s:states>
        <s:State name="normal" />
		<s:State name="disabled" />
    </s:states>

	<s:Group id="tlGroup" width="100%" height="100%">		
		<tl:ZoomContext id="zoomContext" x="{titleGroupWidth + divider.skin.x}" width="100%" minWidth="200"  />				
		<s:BorderContainer y="{zoomContext.height}" width="100%" height="100%">	
			<tl:TimeRuler id="timeRuler"  width="100%" startPosition="{titleGroupWidth+ divider.skin.x}" rulerWidth="{zoomContext.width}"  />
			<s:Scroller width="100%" height="100%" y="{timeRuler.height}">			
				<s:VGroup id="contentGroup"  gap="0" width="100%" />				
			</s:Scroller>
		</s:BorderContainer>
		<tl:Divider id="divider" height="100%" x="{titleGroupWidth}" leftMinSize="150" rightMinSize="{zoomContext.minWidth}" width="100%" />
	</s:Group>
</s:Skin >
