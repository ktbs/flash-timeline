<?xml version="1.0" encoding="utf-8"?>
<s:Skin  xmlns:fx="http://ns.adobe.com/mxml/2009" 
				 xmlns:s="library://ns.adobe.com/flex/spark"
				 xmlns:tl="com.ithaca.timeline.*"
				 xmlns:tls="com.ithaca.timeline.skins.*"
				 xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:Skins="com.ithaca.timeline.Skins.*" 
				  creationComplete="creationCompleteHandler(event)"
				 width="100%" height="100%">
	<fx:Declarations>
		
		<!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
	</fx:Declarations>
	
	<fx:Metadata>[HostComponent("com.ithaca.timeline.Timeline")]</fx:Metadata>
	
	<fx:Script>
		<![CDATA[         			
			import com.ithaca.timeline.events.TimelineEvent;
	
			protected function creationCompleteHandler(event:Event):void
			{
				zoomContext.addEventListener( TimelineEvent.TIMERANGES_CHANGE, timeRuler.onTimeRangeChange);		
				zoomContext.addEventListener( Event.RESIZE, timeRuler.redraw);		
			}
			 ]]>
	</fx:Script>

	<s:states>
        <s:State name="normal" />
		<s:State name="disabled" />
    </s:states>
		
	<mx:HDividedBox  width="100%" height="100%"> 
		<s:VGroup gap="0">		
				<mx:Spacer height="{zoomContext.height+timeRuler.height}"/>			
				<s:VGroup id="titleGroup"  gap="0" width="100%" height="{contentGroup.height}" clipAndEnableScrolling="true" verticalScrollPosition="{contentGroup.verticalScrollPosition}"  />				
		</s:VGroup>				
		<s:VGroup id="renderGroup" width="100%" height="100%" gap="0">		
				<tl:ZoomContext id="zoomContext" width="100%" minWidth="200"  />				
				<tl:TimeRuler id="timeRuler"  width="100%" startPosition="0" rulerWidth="{zoomContext.width}"  />	
				<s:Scroller id="scroller" width="100%" height="100%" >							
					<s:VGroup id="contentGroup"  gap="0" width="100%" />				
				</s:Scroller>
		</s:VGroup>
	</mx:HDividedBox>
	
</s:Skin >
